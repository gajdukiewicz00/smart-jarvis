# Task Service Configuration
SERVER_PORT=8081
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/smartjarvis
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# Service Discovery
EUREKA_ENABLED=true
EUREKA_SERVICE_URL=http://localhost:8761/eureka/
REGISTER_WITH_EUREKA=true
FETCH_REGISTRY=true

# Task Service Settings
TASK_MAX_TITLE_LENGTH=255
TASK_MAX_DESCRIPTION_LENGTH=1000
TASK_DEFAULT_PRIORITY=MEDIUM
TASK_OVERDUE_CHECK_ENABLED=true
TASK_DUE_SOON_HOURS=24

# Logging
LOG_LEVEL=INFO
WEB_LOG_LEVEL=INFO 